<div class="container" style="margin-top: 100px">
  <div class="row">
    <div class="col-md-6">
      <% if @bubble_mug.photos.size == 1 %>
        <%= cl_image_tag @bubble_mug.photos.first.key, width: 500, crop: :fill, class: "product-image" %>
      <% elsif @bubble_mug.photos.size > 1 %>
        <div class="d-flex form_book mb-4">
          <%= cl_image_tag @bubble_mug.photos.first.key, width: 500, crop: :fill, class: "product-image" %>
